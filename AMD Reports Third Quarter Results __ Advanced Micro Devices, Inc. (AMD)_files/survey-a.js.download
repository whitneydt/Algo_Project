function ColorBoxDelay(method) {
  if (jQuery && jQuery.colorbox) {
    method();
  } else {
    setTimeout(function() {
      ColorBoxDelay(method)
    }, 50);
  }
}

function FunctionLoadA(percent_chance, survey_url, survey_onexit, options, cookieName) {
  random_number = Math.floor((Math.random() * 100) + 1);
  if (getCookieConsent().indexOf('C0003') !== -1 && isCookieEnabled()) {
    var sPageVisited;
    sPageVisited = "";
    if (typeof cookieName === 'undefined') {
      cookieName = 'sPageVisited2';
    }
    sPageVisited = getCookieValueString(cookieName);

    if (sPageVisited == null && (random_number < percent_chance)) {
      setCookie(cookieName, "true");

      if (survey_onexit) {
        jQuery(window).unload(function () {
          window.open(survey_url, "", "toolbar=no,toolbar=0,location=no,location=0,status=no,status=0,menubar=no,menubar=0,scrollbars=yes,scrollbars=1,resizable=yes,resizable=1,height=600,width=800");
        });
      }
      else {
	var details = options || {};
        details.href= survey_url;
        details.className = 'PPLightBox';
        details.open = true;
        details.closeButton = true;
        details.iframe = true;
        if (typeof details.width === 'undefined') {
          details.width = '500px';
        }
        if (typeof details.height === 'undefined') {
          details.height = '500px';
        }
        if (typeof details.fixed === 'undefined') {
          details.fixed = true;
        }
        if (typeof details.reposition === 'undefined') {
          details.reposition = true;
        }
        if (typeof details.escKey === 'undefined') {
          details.escKey = false;
        }
        if (typeof details.overlayClose === 'undefined') {
          details.overlayClose = false;
        }
        if (typeof details.opacity === 'undefined') {
          details.opacity = 0;
        }
        ColorBoxDelay(function() {
         jQuery.colorbox(details);
        });
      }
    }
  }
}

